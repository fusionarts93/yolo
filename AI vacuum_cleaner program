goalstate={"A":"0","B":"0"}
roomstate={"A":"0","B":"0"}
action=0
cost=0
location=input("enter the location of vacuum cleaner:")
for room in roomstate:
    action=input("enter the state of "+room+"(0 for clean or 1 for dirty)")
    roomstate[room]=action
print("goalstate is:",goalstate)
print("roomstate is:",roomstate)
print("location of the vacuum cleaner is:",location)
if (roomstate!=goalstate):
    if(location=="A"):
        if(roomstate["A"]=="1"):
            roomstate["A"]="0"
            cost+=1
            print("room A was dirty\n room A has been clean \ncost for cleaning room is 1")
        if(roomstate==goalstate):
                print("goalstate has been reached")
                print("performance mesurement is:",cost)
        else:
            print("room A is clean")
            print("vacuum from A to B")
            print("cost for moving is 1")
            cost+=1
            if(roomstate["B"]=="1"):
                roomstate["B"]="0"
                cost+=1
                print("room B was dirty\n room B is cleaned\ncost for cleaning room is 1")
            if(roomstate==goalstate):
                print("goalstate is reached")
                print("performance measurement is",cost)
    elif(location=="B"):
            if(roomstate["B"]==1):
                roomstate["B"]="0"
                cost+=1
                print("room B was dirty\nroom B was clean \n cost for cleaning room B is 1")
            if(roomstate==goalstate):
                print("goal state has reached")
                print("perfomrance measurement is",cost)
            else:
                print("room B is clean")
                print("vacuum from B to A")
                print("cost for moving A to B is 1")
                cost+=1
                if(roomstate["A"]=="1"):
                    
                    roomstate["A"]="0"
                    print("room A was dirty\n room A has been clean \ncost for cleaning room is 1")
                    cost+=1
                if(roomstate==goalstate):
                          print("goalstate is reached")
                          print("performance measurement is",cost)
                          
                          
else:
    print("\nAll rooms are already clean")
    print("\nPerformance Measurement: " ,cost)
        
                
    
